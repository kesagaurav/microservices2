package com.gaurav.dto;

import com.gaurav.model.Company;
import com.gaurav.model.Employee;

import lombok.Data;

@Data
public class CompanyDTO {
	private int comid;
	private String name;
	private String loc;
	
	public Company dtoToCompany() {
		Company c=new Company ();
		c.setComid(this.getComid());
		c.setName(this.getName());
		c.setLoc(this.getLoc());
		return c;
	}
	
	
	
	public static EmployeeDTO employeeToDto(Employee emp) {
		EmployeeDTO eDTO=new EmployeeDTO();
		eDTO.setEmpid(emp.getEmpid());
		eDTO.setName(emp.getName());
		eDTO.setDesc(emp.getDesc());
		return eDTO;
	}
}
